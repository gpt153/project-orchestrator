# Application Configuration
APP_NAME="Project Manager"
APP_ENV=development  # development, staging, production, test
LOG_LEVEL=INFO
SECRET_KEY=your-secret-key-here
DEBUG=true

# Database Configuration
DATABASE_URL=postgresql+asyncpg://manager:dev_password@localhost:5432/project_manager
DATABASE_ECHO=false
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Anthropic API (for PydanticAI)
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Telegram Bot
TELEGRAM_BOT_TOKEN=your-telegram-bot-token-here
# TELEGRAM_WEBHOOK_URL=your_webhook_url_here

# GitHub Integration
GITHUB_ACCESS_TOKEN=your-github-token-here
GITHUB_WEBHOOK_SECRET=your-webhook-secret-here

# Redis (optional, for caching)
REDIS_URL=redis://localhost:6379/0

# Monitoring
SENTRY_DSN=your-sentry-dsn-here

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true  # Auto-reload in development

# Frontend (Web Interface)
FRONTEND_URL=http://localhost:3002
SERVE_FRONTEND=false  # Set to true in production

# SCAR Project Import Settings
SCAR_AUTO_IMPORT=true  # Enable/disable auto-import on startup
SCAR_IMPORT_REPOS=  # Comma-separated list (e.g., "owner/repo1,owner/repo2")
SCAR_IMPORT_USER=  # GitHub username to import all repos
SCAR_IMPORT_ORG=  # GitHub org to import all repos
SCAR_PROJECTS_CONFIG=.scar/projects.json  # Path to projects config file
